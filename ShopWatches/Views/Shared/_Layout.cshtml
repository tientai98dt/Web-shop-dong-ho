                                               <h4><a href="/Home/ChiTietChuyenMuc/@hangSx.Skip(10).Take(11).First().MaHangSX">@hangSx.Skip(10).Take(11).First().TenHang</a></h4>
                                              
                                               @foreach (var item in hangSx.Skip(11).Take(14))
                                               {

                                                   <ul>
                                                       <li><a href="/Home/ChiTietChuyenMuc/@item.MaHangSX">@item.TenHang</a></li>

                                                   </ul>
                                               }

                                           </div>

                                       }
                                    </div>
                                </div>
                            </li>
                            
                            <li class="grid">
                                <a href="/Home/TinTuc">Tin tức</a>
                            </li>
                            <li class="grid">
