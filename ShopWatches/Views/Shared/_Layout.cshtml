                                <a href="/Home/ChuyenMuc">Sản phẩm</a>
                                <div class="mepanel">
                                    <div class="row">
                                        <div class="col1 me-one">
                                            <h4><a href="/Home/ChiTietChuyenMuc/@hangSx.Skip(0).Take(1).First().MaHangSX">@hangSx.Skip(0).Take(1).First().TenHang</a></h4>
                                            @foreach (var item in hangSx.Skip(1).Take(4))
                                            {

