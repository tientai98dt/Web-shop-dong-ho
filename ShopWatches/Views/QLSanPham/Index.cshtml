
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
    ShopWatchesEntities1 shop=new ShopWatchesEntities1();
}
@using ShopWatches.Models
@model List<ShopWatches.Models.SanPham>
<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet"/>
<h1 class="page-header">
    <a href="/QLSanPham/ThemSp" class="btn btn-outline btn-primary">Thêm</a>
</h1>
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên </th>
                <th>Hãng</th>
                <th>Ảnh</th>
                <th>Số lượng</th>
                <th>Giá nhập</th>
                <th>Giá bán</th>
                <th>Ngày đăng</th>
                <th>Sửa</th>
                <th>Xóa</th>
            </tr>
        </thead>
        <tbody>
            
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i % 2 == 0)
                {
                    <tr class="even gradeA">
                        <td>@Model[i].MaSP</td>
                        <td>@Model[i].TenSP</td>
                        <td>@Model[i].HangSanXuat.TenHang</td>
                        <td><img src="@Model[i].Anh" style="width: 50px; height: 50px;"/></td>
                        <td>@Model[i].SoLuong</td>
                        <td>@Model[i].GiaNhap</td>
                        <td>@Model[i].GiaBan</td>
                        <td>@Model[i].NgayDang</td>
                        <td><a href="/QLSanPham/SuaSp/@Model[i].MaSP" class="btn btn-outline btn-primary">Sửa</a></td>
                        <td><a href="/QLSanPham/XoaSp/@Model[i].MaSP" class="btn btn-outline btn-primary">Xóa</a></td>
                    </tr>
                }
                else
                {
                    <tr class="odd gradeA">
                        <td>@Model[i].MaSP</td>
                        <td>@Model[i].TenSP</td>
                        <td>@Model[i].HangSanXuat.TenHang</td>
                        <td><img src="@Model[i].Anh" style="width: 50px; height: 50px;"/></td>
                        <td>@Model[i].SoLuong</td>
                        <td>@Model[i].GiaNhap</td>
                        <td>@Model[i].GiaBan</td>
                        <td>@Model[i].NgayDang</td>
                        <td><a href="/QLSanPham/SuaSp/@Model[i].MaSP" class="btn btn-outline btn-primary">Sửa</a></td>
                        <td><a href="/QLSanPham/XoaSp/@Model[i].MaSP" class="btn btn-outline btn-primary">Xóa</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

