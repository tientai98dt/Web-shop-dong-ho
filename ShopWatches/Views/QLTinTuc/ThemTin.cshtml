
@{
    ViewBag.Title = "ThemTin";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
@model ShopWatches.Models.TinTuc
<h1 class="page-header">
    <a href="/QLTinTuc/Index" class="btn btn-outline btn-primary">Quay lại</a>
</h1>
<div class="row" style="margin-bottom: 50px">

    <div class="col-md-12">
        @using (Html.BeginForm("ThemTin", "QLTinTuc", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmThem" }))
        {
            <div class="form-group input-group" style="display: block;">
                <label>Tiêu đề</label>
                @Html.TextBoxFor(m => m.TieuDe, new { @class = "form-control", placeholder = "Tiêu đề", required = "required" })
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Ảnh</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Chi tiết</label>
                @Html.TextAreaFor(m => m.NoiDung, new { id = "chitiet", @class = "form-control", type = "number", placeholder = "Chi tiết" })
            </div>
            <div style="float: left">
                <input type="submit" class="btn btn-outline btn-primary" value="Thêm" />
                <input type="reset" class="btn btn-outline btn-primary" value="Làm lại" />
            </div>
        }
    </div>

</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<script src="~/ckfinder/ckfinder.js"></script>
<Script>
    CKEDITOR.replace('chitiet');
</Script>

